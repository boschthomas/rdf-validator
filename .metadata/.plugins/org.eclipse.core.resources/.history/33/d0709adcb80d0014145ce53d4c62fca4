<script>
	function toggle_form_element() 
	{
      if ( document.getElementsByName('useGroupVariable')[0].checked ) 
      {
        document.getElementById('group1').style.display = 'block';
        
        var studyGroup = $jQ( '#studyGroup').val();
        var study = $jQ( '#study' ).val();
        var dataSet = $jQ( '#dataSet' ).val();
        var dataFile = $jQ( '#dataFile' ).val();
        
        var url = '<@spring.url "/documentation/datapoints" />/' + studyGroup +'/'+ study +'/'+ dataSet +'/'+ dataFile;
        
        $jQ.ajax( 
        {
			url: url,
			data: { level : "groupVariable" },
			
	    	success: function( data )
	    	{
	    		$jQ( '#groupVariables' ).html( data );
	    	}
	    	
	    }); //end of ajax call
        
      } 
      else 
      {
        document.getElementById('group1').style.display = 'none';

      }
    }

</script>