	<h3>Define group variable</h3>
	<hr>
	<fieldset>
		<label class="MISSY_dataPreparationInput" for="groupVariable">Use Groupvariable</label>
		<span class="MISSY_iconColumn">&nbsp;</span>
		<input type="radio" name="useGroupVariable" id="groupVariable01" value="true" class="MISSY_dataPreparationInput mandatory" onclick="toggle_form_element()">
		<label for="groupVariable01" class="MISSY_radioCheckboxLabels">Yes</label>
		<input type="radio" name="useGroupVariable" id="groupVariable02" value="false" class="MISSY_dataPreparationInput mandatory" onclick="toggle_form_element()">
		<label for="groupVariable02" class="MISSY_radioCheckboxLabels">No</label>
	</fieldset>
	<br>
	<fieldset id="group1" style="display: none;">
		<label class="MISSY_dataPreparationInput">Define Groupvariable</label>
		
		<span class="MISSY_iconColumn">&nbsp;</span>
		
		<div id="groupVariables" style="display: inline-block">
	
			<#-- ajax response here -->

		</div>

		<@forms.createFormOnsiteHelp "Define Groupvariable" "" />
		<#--
		<!--onsiteHelp: osh.variableDetails.variableName
