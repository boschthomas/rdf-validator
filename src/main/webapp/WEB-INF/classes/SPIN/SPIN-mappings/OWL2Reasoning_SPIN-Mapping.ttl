# ---------------
# Axioms - Class Expression Axioms - Subclass Axioms 


owl2spin:ToInfer 
	spin:rule [
		a sp:Construct ;
        	sp:text """
            	CONSTRUCT {            
                	?this rdf:type ?CE2 .        
            	}
            	WHERE {
                	?CE1 rdfs:subClassOf ?CE2 .             
                	?this rdf:type ?CE1 .            
        		} """ ; ] .

